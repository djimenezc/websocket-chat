root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

[Makefile]
indent_style = tab
indent_size = 4

[package.json]
max_line_length = 800
[*.sh]
max_line_length = 200

[*.md]
trim_trailing_whitespace = false
